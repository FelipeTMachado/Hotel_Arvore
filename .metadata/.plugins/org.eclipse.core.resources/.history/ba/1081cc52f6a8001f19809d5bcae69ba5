package model;

import java.util.ArrayList;
import java.util.List;

public class Hotel {
	// ATRIBUTOS
	private int id;
	private String nome;
	private List<Quarto> quartos = new ArrayList<Quarto>();
	
	
	
	// CONTRUTORES
	public Hotel(int id, String nome) {
		this.id      = id;
		this.nome    = nome;
	}

	public Hotel(int id, String nome, List<Quarto> quartos) {
		this.id      = id;
		this.nome    = nome;
		this.quartos = quartos;
	}
	
		
	
	// GETTERS AND SETTERS
	public String getNome() {
		return nome;
	}
	public void setNome(String nome) {
		this.nome = nome;
	}
	public int getId() {
		return id;
	}
	public void setId(int id) {
		this.id = id;
	}
	public List<Quarto> getQuartos() {
		return quartos;
	}
	public void setQuartos(List<Quarto> quartos) {
		this.quartos = quartos;
	}
}
